{% extends 'base.html.twig' %}

{% block title %}订单/保单查询{% endblock %}

{% block body %}
<div class="page" data-name="orders">
    <div class="navbar">
        <div class="navbar-bg"></div>
        <div class="navbar-inner sliding">
            <div class="left">
                <a href="#" class="link back" id="back-button">
                    <i class="icon f7-icons">chevron_left</i>
                </a>
            </div>
            <div class="title" style="position: absolute; left: 50%; transform: translateX(-50%);">订单/保单查询</div>
        </div>
    </div>

    <div class="page-content">
        <!-- Search Bar -->
        <div class="searchbar-container" style="padding: 8px 16px; background: #f7f7f8;">
            <form class="searchbar">
                <div class="searchbar-inner">
                    <div class="searchbar-input-wrap">
                        <input type="search" placeholder="请输入搜索关键词">
                        <i class="searchbar-icon"></i>
                    </div>
                </div>
            </form>
        </div>

        <!-- Tabs Navigation -->
        <div class="tabs-segmented">
            <a href="#" class="tab-link tab-link-active">全部</a>
            <a href="#" class="tab-link">待支付</a>
            <a href="#" class="tab-link">待核保</a>
            <a href="#" class="tab-link">保障中</a>
            <a href="#" class="tab-link">已到期</a>
        </div>

        <!-- Orders List -->
        <div class="list media-list no-hairlines">
            <ul>
                {% for order in orders %}
                    <li>
                        <div class="item-content">
                            <div class="item-inner">
                                <div class="item-title-row">
                                    <div class="item-title">{{ order.productName }}</div>
                                    <div class="item-after" style="color: #FF6B6B;">{{ order.status }}</div>
                                </div>
                                <div class="item-text">
                                    <div class="order-details">
                                        <div class="detail-row">
                                            <span class="label">保障期</span>
                                            <span class="value">{{ order.startDate|date('Y.m.d') }}-{{ order.endDate|date('Y.m.d') }}</span>
                                        </div>
                                        <div class="detail-row">
                                            <span class="label">投保人</span>
                                            <span class="value">{{ order.policyHolder }}</span>
                                        </div>
                                        <div class="detail-row">
                                            <span class="label">被保险人</span>
                                            <span class="value">{{ order.insured }}</span>
                                        </div>
                                        <div class="detail-row">
                                            <span class="label">保费</span>
                                            <span class="value">¥{{ order.premium|number_format(2) }}</span>
                                        </div>
                                    </div>
                                    <div class="button-row">
                                        <a href="{{ path('claim_create', {'id': order.id}) }}" class="button button-small button-outline">申请理赔</a>
                                        <a href="{{ path('order_detail', {'id': order.id}) }}" class="button button-small button-outline">查看详情</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </li>
                {% else %}
                    <li class="text-center" style="padding: 20px;">
                        <p>暂无订单记录</p>
                    </li>
                {% endfor %}
            </ul>
        </div>
    </div>
</div>

<style>
.searchbar {
    background: #fff;
    border-radius: 8px;
}
.searchbar input {
    background: #fff;
}
.tabs-segmented {
    padding: 15px;
    background: #fff;
    display: flex;
    justify-content: space-around;
    border-bottom: 1px solid #eee;
}
.tab-link {
    color: #666;
    text-decoration: none;
    padding: 5px 0;
}
.tab-link-active {
    color: #FF6B6B;
    border-bottom: 2px solid #FF6B6B;
}
.order-details {
    margin: 15px 0;
}
.detail-row {
    display: flex;
    justify-content: space-between;
    margin: 5px 0;
    color: #666;
    font-size: 14px;
}
.button-row {
    display: flex;
    justify-content: flex-end;
    gap: 10px;
    margin-top: 15px;
}
.button-small {
    padding: 0 15px;
    height: 28px;
    line-height: 26px;
    border-radius: 14px;
    font-size: 12px;
}
.button-outline {
    border: 1px solid #666;
    color: #666;
}
.item-title {
    font-size: 16px;
    font-weight: 500;
}
.list ul {
    background: #f7f7f8;
}
.list li {
    background: #fff;
    margin: 10px 15px;
    border-radius: 8px;
}
.item-content {
    padding: 15px;
}
</style>

<script>
document.addEventListener('DOMContentLoaded', function() {
    document.getElementById('back-button').addEventListener('click', function(e) {
        e.preventDefault();
        if (document.referrer) {
            window.location.href = document.referrer;
        } else {
            window.location.href = '/';
        }
    });
});
</script>
{% endblock %} 