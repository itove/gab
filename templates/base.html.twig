<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, minimum-scale=1, user-scalable=no, viewport-fit=cover">
        <title>{% block title %}关爱保{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/framework7@7.1.5/framework7-bundle.min.css">
        <link rel="stylesheet" href="/css/framework7-icons.css">
        {% block stylesheets %}
        <style>
            .margin-top {
                margin-top: 16px !important;
            }
            .margin-horizontal {
                margin-left: 16px !important;
                margin-right: 16px !important;
            }
            .button-fill {
                background-color: #007aff !important;  /* iOS blue color */
                color: white !important;
            }
            
            .button-large {
                height: 44px !important;
                line-height: 44px !important;
            }
            
            .text-align-justify {
                text-align: justify;
            }
            
            .color-orange {
                background-color: #ff9500 !important;
            }
            
            .navbar .f7-icons {
                font-size: 22px;
            }
            
            .text-color-gray {
                color: #8e8e93;
                font-size: 14px;
            }
            
            .checkbox {
                display: flex;
                align-items: center;
                gap: 8px;
            }
        </style>
        {% endblock %}

        {% block javascripts %}
            {% block importmap %}{{ importmap('app') }}{% endblock %}
        {% endblock %}
    </head>
    <body>
        <div id="app">
            <div class="view view-main">
                {% block body %}{% endblock %}
            </div>
        </div>

        <script src="https://cdn.jsdelivr.net/npm/framework7@7.1.5/framework7-bundle.min.js"></script>
        
        <script>
            // Single Framework7 initialization
            var app = new Framework7({
                el: '#app',
                name: 'Insurance App',
                theme: 'ios',
                routes: [
                    {
                        path: '/order/new',
                        url: '/order/new',
                    },
                    {
                        path: '/school',
                        url: '/school',
                    }
                ]
            });

            // Wait for DOM to be fully loaded
            document.addEventListener('DOMContentLoaded', function() {
                // Create picker for school selection
                const schoolPicker = app.picker.create({
                    inputEl: '#picker-school',
                    toolbar: true,
                    rotateEffect: true,
                    toolbarCloseText: '确定',
                    cols: [
                        {
                            textAlign: 'center',
                            values: [
                                '汉江师范学院',
                                '十堰市第一中学',
                                '十堰市第二中学',
                                '茅箭区实验小学',
                                '十堰市第一小学',
                                '十堰市第二小学'
                            ]
                        }
                    ],
                    on: {
                        change: function (picker, values) {
                            document.getElementById('school-value').textContent = values[0];
                        }
                    }
                });

                // Handle order button click
                const orderElement = document.getElementById('order');
                if (orderElement) {
                    orderElement.addEventListener('click', function() {
                        window.location.href = '/order/new';
                    });
                }

                // Handle start button click
                const startElement = document.getElementById('start');
                if (startElement) {
                    startElement.addEventListener('click', function() {
                        window.location.href = '/school';
                    });
                }

                // Handle form submission
                const orderForm = document.getElementById('order-form');
                if (orderForm) {
                    orderForm.addEventListener('submit', function(e) {
                        e.preventDefault();
                        // Add your form submission logic here
                    });
                }
            });
        </script>
    </body>
</html>
