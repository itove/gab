{% extends 'base.html.twig' %}

{% block title %}北京联合松滋营业部{% endblock %}

{% block stylesheets %}
<style>
    #tab-1{
      .card{
        margin: 0;
      }
    }
    #tab-2{
      background: #ffffff;
      padding: 16px;
      .list{
        .item-content{
          padding-top: 6px;
          padding-bottom: 6px;
          border-bottom: .2px solid #ededed;
        }
      }
      .item-media{
        .icon{
          font-size: 16px;
        }
      }
    }
    #tab-2 .item-inner{
      font-size: 14px;
    }
    .fixed{
        position: fixed;
    }
    
    .banner-image {
        box-shadow: 0 2px 8px rgba(0,0,0,0.1);
    }
    
    .menu-card {
        background: #f8f9fa;
        border-radius: 12px;
        padding: 15px;
        box-shadow: 0 2px 8px rgba(0,0,0,0.1);
    }
    
    .card-title {
        font-size: 16px;
        font-weight: bold;
        margin-top: 10px;
    }
    
    .card-subtitle {
        font-size: 12px;
        color: #666;
        margin-top: 5px;
    }
    
    .insurance-logo {
        width: 100%;
        height: auto;
        object-fit: contain;
        padding: 10px;
    }
    
    .grid {
        display: grid;
    }
    
    .grid-cols-2 {
        grid-template-columns: repeat(2, 1fr);
    }
    
    .grid-cols-3 {
        grid-template-columns: repeat(3, 1fr);
    }
    
    .gap-15 {
        gap: 15px;
    }
    
    .grid {
        display: grid;
        padding: 15px;
        background: #fff;
        margin: 15px 0;
    }
    .grid-cols-4 {
        grid-template-columns: repeat(4, 1fr);
    }
    .grid-gap {
        gap: 15px;
    }
    .grid-item-title {
        font-size: 12px;
        margin-top: 8px;
        color: #333;
    }
    .no-shadow {
        box-shadow: none;
    }
    .badge {
        padding: 2px 8px;
        border-radius: 4px;
        font-size: 12px;
    }
    .list a {
        color: #333;
        text-decoration: none;
    }
    .item-title {
        color: #333;
    }
    .item-after .f7-icons {
        font-size: 14px;
        color: #999;
    }

    /* Tab Styling */
    .toolbar {
        min-height: 64px;
        padding: 5px 0;
    }

    .toolbar-inner {
        justify-content: space-between;
        margin: 5px 0;
        width: 100%;
        height: 100%;
    }

    .tab-link {
        flex: 1;
        width: 50%;
        text-align: center;
        padding: 12px 20px;
        margin: 5px 0;
        color: #999;
        transition: all 0.3s ease;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        gap: 4px;           /* Reduced gap between icon and text */
    }

    .tab-link i {
        font-size: 24px;
        color: #999;
        display: block;
        line-height: 1;    /* Added to reduce space */
    }

    .tab-link .tabbar-label {
        font-size: 12px;
        color: #999;
        display: block;
        line-height: 1;    /* Added to reduce space */
    }

    /* Rest of the styles remain the same */
    .tab-link.tab-link-active,
    .tab-link.tab-link-active i,
    .tab-link.tab-link-active .tabbar-label {
        color: #FF6B6B !important;
    }

    .tab-link:hover {
        background-color: rgba(0,0,0,0.03);
    }

    .swiper-container {
        position: relative; /* Ensure the container is positioned relative */
    }
    .swiper-pagination {
        position: relative; /* Position absolutely within the container */
        bottom: 0 !important; /* Adjust the distance from the bottom */
        left: 50%; /* Center horizontally */
        // transform: translateX(-50%); /* Adjust for centering */
        text-align: center; /* Center the bullets */
    }
    .swiper-pagination-bullet {
        background: #007aff; /* Change bullet color */
        opacity: 0.1; /* Set default opacity */
    }
    .swiper-pagination-bullet-active {
        opacity: 0.6; /* Active bullet opacity */
    }
</style>
{% endblock %}

{% block body %}
    <!-- Toolbar with bottom tabs -->
    <div class="toolbar toolbar-bottom tabbar-labels fixed">
        <div class="toolbar-inner">
            <a href="#tab-1" class="tab-link tab-link-active">
                <i class="icon f7-icons">house</i>
                <span class="tabbar-label">首页</span>
            </a>
            <a href="#tab-2" class="tab-link">
                <i class="icon f7-icons">person</i>
                <span class="tabbar-label">我的</span>
            </a>
        </div>
    </div>

    <!-- Tabs content -->
    <div class="tabs">
        <div id="tab-1" class="tab tab-active" style="overflow-y: auto; max-height: 100vh; overflow-x: hidden;">
            <div class="block">
                <!-- Banner Section -->
                <div class="banner-section swiper-container">
                    <div class="swiper-wrapper">
                        <div class="swiper-slide">
                            <img src="https://fakeimg.pl/800x300/FF6B6B/FFF/?text=北京联合松滋营业部&font=noto" alt="北京联合保险经纪" class="banner-image" style="width: 100%; border-radius: 12px;">
                        </div>
                        <div class="swiper-slide">
                            <img src="https://fakeimg.pl/800x300/FF6B6B/FFF/?text=北京联合松滋营业部&font=noto" alt="北京联合保险经纪" class="banner-image" style="width: 100%; border-radius: 12px;">
                        </div>
                        <div class="swiper-slide">
                            <img src="https://fakeimg.pl/800x300/FF6B6B/FFF/?text=北京联合松滋营业部&font=noto" alt="北京联合保险经纪" class="banner-image" style="width: 100%; border-radius: 12px;">
                        </div>
                    </div>
                    <!-- Pagination dots -->
                    <div class="swiper-pagination"></div>
                </div>

                <!-- Menu Cards Grid -->
                <div class="grid grid-cols-2 gap-15" style="margin: 0; padding: 0">
                    <a href="/school" class="card menu-card" id="start">
                        <div class="card-content">
                            <img src="https://fakeimg.pl/128x45/CC996B/FFF/?text=投保&font=noto" alt="订单图标" style="width: 100%;">
                            <div class="card-title">立即投保</div>
                            <div class="card-subtitle">现在为家人投保 ></div>
                        </div>
                    </a>
                    <a href="/orders" class="card menu-card" id="index-orders">
                        <div class="card-content">
                            <img src="https://fakeimg.pl/128x45/FF6B6B/FFF/?text=订单&font=noto" alt="订单图标" style="width: 100%;">
                            <div class="card-title">订单/保单</div>
                            <div class="card-subtitle">查看投保信息 ></div>
                        </div>
                    </a>
                    <a href="/service" class="card menu-card">
                        <div class="card-content">
                            <img src="https://fakeimg.pl/128x45/4ECDC4/FFF/?text=客服&font=noto" alt="客服图标" style="width: 100%;">
                            <div class="card-title">客服中心</div>
                            <div class="card-subtitle">在校学生投保、理赔等常见问题咨询</div>
                        </div>
                    </a>
                    <a href="/claims" class="card menu-card">
                        <div class="card-content">
                            <img src="https://fakeimg.pl/128x45/FFD93D/FFF/?text=理赔&font=noto" alt="理赔图标" style="width: 100%;">
                            <div class="card-title">理赔报案</div>
                            <div class="card-subtitle">快速处理报案 ></div>
                        </div>
                    </a>
                </div>

                <!-- Insurance Companies Section -->
                <div class="section-title" style="margin-top: 30px;">
                    <h3>合作保险公司</h3>
                </div>
                <div class="insurance-companies swiper-container-1">
                    <div class="swiper-wrapper">
                        <!-- Insurance company logos grid -->
                        <div class="grid grid-cols-3 gap-15">
                            <img src="https://fakeimg.pl/120x60/F8F9FA/666/?text=人保&font=noto" alt="中国人民保险" class="insurance-logo">
                            <img src="https://fakeimg.pl/120x60/F8F9FA/666/?text=人寿&font=noto" alt="中国人寿" class="insurance-logo">
                            <img src="https://fakeimg.pl/120x60/F8F9FA/666/?text=太平洋&font=noto" alt="太平洋保险" class="insurance-logo">
                            <img src="https://fakeimg.pl/120x60/F8F9FA/666/?text=平安&font=noto" alt="中国平安" class="insurance-logo">
                            <img src="https://fakeimg.pl/120x60/F8F9FA/666/?text=中华&font=noto" alt="中华保险" class="insurance-logo">
                            <img src="https://fakeimg.pl/120x60/F8F9FA/666/?text=紫金&font=noto" alt="紫金保险" class="insurance-logo">
                        </div>
                    </div>
                    <!-- Pagination dots -->
                    <div class="swiper-pagination"></div>
                </div>
            </div>
        </div>
        <div id="tab-2" class="tab">
            <!-- Tab 2 - Me -->
            <div class="card no-shadow" style="margin-top: 20px;">
                <div class="card-content">
                    <div class="list media-list no-hairlines">
                        <ul>
                            <li>
                                <div class="item-content" style="padding-left: 0;">
                                    <div class="item-media">
                                        <img src="https://fakeimg.pl/60/EAEAEA/999/?text=用户&font=noto" width="60" height="60" style="border-radius: 50%;">
                                    </div>
                                    <div class="item-inner">
                                        <div class="item-title-row">
                                            <div class="item-title">{{ username }}</div>
                                        </div>
                                        <div class="item-subtitle">
                                            <span class="badge color-orange">未实名</span>
                                        </div>
                                    </div>
                                </div>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>

            <!-- Quick Actions Grid -->
            <div class="grid grid-cols-4 grid-gap medium-margin">
                <a href="/orders" class="grid-item text-align-center" id="orders">
                    <img src="https://fakeimg.pl/40/FF6B6B/FFF/?text=订单&font=noto" style="border-radius: 8px;">
                    <div class="grid-item-title">订单/保单</div>
                </a>
                <a href="/claims" class="grid-item text-align-center">
                    <img src="https://fakeimg.pl/40/FFD93D/FFF/?text=理赔&font=noto" style="border-radius: 8px;">
                    <div class="grid-item-title">理赔报案</div>
                </a>
                <a href="/suggestions" class="grid-item text-align-center">
                    <img src="https://fakeimg.pl/40/4ECDC4/FFF/?text=建议&font=noto" style="border-radius: 8px;">
                    <div class="grid-item-title">投诉建议</div>
                </a>
                <a href="/consult" class="grid-item text-align-center">
                    <img src="https://fakeimg.pl/40/FF8B94/FFF/?text=顾问&font=noto" style="border-radius: 8px;">
                    <div class="grid-item-title">专属顾问</div>
                </a>
            </div>

            <!-- Menu List -->
            <div class="list no-hairlines">
                <ul>
                    <li>
                        <a href="/verify" class="item-content">
                            <div class="item-media"><i class="icon f7-icons">person_crop_circle</i></div>
                            <div class="item-inner">
                                <div class="item-title">实名认证</div>
                                <div class="item-after"><i class="icon f7-icons">chevron_right</i></div>
                            </div>
                        </a>
                    </li>
                    <li>
                        <a href="/profile" class="item-content">
                            <div class="item-media"><i class="icon f7-icons">person</i></div>
                            <div class="item-inner">
                                <div class="item-title">个人信息</div>
                                <div class="item-after"><i class="icon f7-icons">chevron_right</i></div>
                            </div>
                        </a>
                    </li>
                    <li>
                        <a href="/privacy" class="item-content">
                            <div class="item-media"><i class="icon f7-icons">doc_text</i></div>
                            <div class="item-inner">
                                <div class="item-title">隐私协议</div>
                                <div class="item-after"><i class="icon f7-icons">chevron_right</i></div>
                            </div>
                        </a>
                    </li>
                    <li>
                        <a href="/service-agreement" class="item-content">
                            <div class="item-media"><i class="icon f7-icons">doc_plaintext</i></div>
                            <div class="item-inner">
                                <div class="item-title">客户服务协议</div>
                                <div class="item-after"><i class="icon f7-icons">chevron_right</i></div>
                            </div>
                        </a>
                    </li>
                    <li>
                        <a href="/about" class="item-content">
                            <div class="item-media"><i class="icon f7-icons">info_circle</i></div>
                            <div class="item-inner">
                                <div class="item-title">关于我们</div>
                                <div class="item-after"><i class="icon f7-icons">chevron_right</i></div>
                            </div>
                        </a>
                    </li>
                    <li>
                        <a href="tel:400-000-0000" class="item-content">
                            <div class="item-media"><i class="icon f7-icons">phone</i></div>
                            <div class="item-inner">
                                <div class="item-title">客服电话</div>
                                <div class="item-after"><i class="icon f7-icons">chevron_right</i></div>
                            </div>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
<script>
    document.addEventListener('DOMContentLoaded', function() {
        document.getElementById('start').addEventListener('click', function(e) {
            e.preventDefault();
            window.location.href = '/school';
        });

        document.getElementById('index-orders').addEventListener('click', function(e) {
            e.preventDefault();
            window.location.href = '/orders';
        });

        document.getElementById('orders').addEventListener('click', function(e) {
            e.preventDefault();
            window.location.href = '/orders';
        });

        document.querySelector('a[href="#tab-1"]').addEventListener('click', function(e) {
            e.preventDefault();
            history.pushState(null, '', '/');
        });

        document.querySelector('a[href="#tab-2"]').addEventListener('click', function(e) {
            e.preventDefault();
            history.pushState(null, '', '/#me');
        });

        // Initialize Swiper
        var swiper = new Swiper('.swiper-container', {
            slidesPerView: 1, // Show only 1 slide per view
            spaceBetween: 20, // Space between slides in pixels
            pagination: {
                el: '.swiper-pagination',
                clickable: true, // Make pagination bullets clickable
            },
            // navigation: {
            //     nextEl: '.swiper-button-next',
            //     prevEl: '.swiper-button-prev',
            // },
            loop: true, // Optional: enable looping
        });
    });
</script>
{% endblock %}
